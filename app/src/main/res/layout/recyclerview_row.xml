<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tfExpanse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:maxEms="10"
        android:minEms="10"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tfShowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:maxEms="10"
        android:minEms="10"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tfShowUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:maxEms="10"
        android:minEms="10"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tfShowMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:maxEms="10"
        android:minEms="10"
        android:textSize="18sp" />

</LinearLayout>